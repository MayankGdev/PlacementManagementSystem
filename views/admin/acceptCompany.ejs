<%-include('../include/admin-header',{pageTitle:pageTitle,adminEmail:adminEmail})-%>

<h1 class="my-2" style="margin-left: 300px;">company info</h1>
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            <div class="row">
                <center>
                    <div class="card  text-white bg-dark p-3  border-dark my-3" style="margin-left: 320px;">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="border-radius: 16px;">
                            <div class="well profile col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                                    <figure>
                                        <i class="far fa-building " style="font-size: 5rem;padding: 5%;"></i>
                                    </figure>
                                    <h5 style="text-align:center;font-size: 2rem;"><strong
                                            id="user-name"><%=company.name%></strong></h5>
                                    <p style="text-align:center;font-size: 1.5rem;" id="user-frid"><%=company.phone%>
                                    </p>

                                    <p style="text-align:center;font-size: 1.5rem;overflow-wrap: break-word;"
                                        id="user-email"><%=company.email%></p>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 divider text-center"></div>

                                    <a href="/pendingCompanies/accept/<%=company._id%>"
                                        class="btn btn-outline-success">Accept</a>
                                    <a href="/pendingCompanies/delete/<%=company._id%>"
                                        class="btn btn-outline-danger">Remove</a>
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 divider text-center"></div>


                                </div>
                            </div>
                        </div>
                    </div>
                </center>

            </div>
        </div>
    </div>
</div>
<%-include('../include/admin-footer')-%>