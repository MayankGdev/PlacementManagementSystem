<%-include('../include/student-header',{studentName:student.name,pageTitle:pageTitle})-%>

<h1 class="my-2"style="margin-left: 300px;"><u>Student Info</u></h1>
<div class="container">
    <div class="row">
         <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="row">
                    <center>
                    <div class="card  text-white bg-dark   border-dark my-3" style="margin-left: 260px;">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="border-radius: 16px;">
                        <div class="well profile col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                                <figure>
                                    <i class="fas fa-user-graduate " style="font-size: 5rem;padding: 5%;"></i>
                                </figure>
                                <h5 style="text-align:center;font-size: 2rem;"><strong id="user-name"><%=student.name%></strong></h5>
                                <p style="text-align:center;font-size: 1.5rem;" id="user-frid"><%=student.phoneNo%> </p>
                                <%if(student.gender){%>
                                    <p style="text-align:center;font-size: 1.5rem;" id="user-frid">Gender : male </p>
                                <%}else{%>
                                    <p style="text-align:center;font-size: 1.5rem;" id="user-frid">Gender : female </p>
                                    <%}%>
                                <p style="text-align:center;font-size: 1.5rem;overflow-wrap: break-word;" id="user-email"><%=student.email%></p>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 divider text-center"></div>
                                
                                <p style="text-align:center;font-size: 1.5rem;" id="user-role">Course : <%=student.course%></p>
                                <p style="text-align:center;font-size: 1.5rem;" id="user-role">Semester : <%=student.sem%></p>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 divider text-center"></div>
                                   
                                   
                              </div>
                        </div>
                     </div>
                </div>
            </center>

            </div>
        </div>
     </div>    
</div>
<%-include('../include/student-footer')-%>