<%- include('../include/company-header',{pageTitle:pageTitle,compEmail : compEmail});-%>
<div class="content-wrapper" style="width: 80%; padding-left: 180px;">
  <div class="container>
    <div class="row justify-content-center mainWrap">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header"><h5><center>Enter Job details</center></h5></div>
                                <div class="card-body">
    
                                    <form class="form-horizontal" method="post" action="/job" >
    
                                        <div class="form-group">
                                            <label for="name" class="cols-sm-2 control-label">Job Title</label>
                                            <div class="cols-sm-10">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" name="tb_title" placeholder="Enter Job Title">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="email" class="cols-sm-2 control-label">Job Description</label>
                                            <div class="cols-sm-10">
                                                <div class="input-group">                                                   
                                                    <textarea rows="5" cols="50" class="form-control" name="tb_description" placeholder="Enter Description Here"></textarea><br>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="Phone" class="cols-sm-2 control-label">Job Type</label>
                                            <div class="cols-sm-10">
                                                <div class="input-group">
                                                  <div class="custom-control custom-radio">
                                                    <div class="row">
                                                      <div class="col-6">
                                                        <input type="radio" name="jobType" value="Part-Time">
                                                        <label class="form-check-label" for="materialUnchecked">Part-Time</label>
                                                      </div>
                                                      <div class="col-6">
                                                        <input type="radio" name="jobType" value="Full-time"><br>
                                                        <label class="form-check-label" for="materialUnchecked">Full-Time</label>
                                                      </div>
                                                    </div>
                                                </div>
                                              </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="password" class="cols-sm-2 control-label">Salary Provided</label>
                                            <div class="cols-sm-10">
                                                <div class="input-group">
                                                  <input type="text" class="form-control" name="tb_salary" placeholder="Enter salray">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="address1" class="cols-sm-2 control-label">Experiece need</label>
                                            <div class="cols-sm-10">
                                                <div class="input-group">
                                                  <input type="text" class="form-control" name="tb_experience" placeholder="Enter experiece">
                                                </div>
                                            </div>
                                        </div>   

                                        <div class="form-group">
                                            <label for="address2" class="cols-sm-2 control-label">Apply By</label>
                                            <div class="cols-sm-10">
                                                <div class="input-group">                                                   
                                                  <input type="date" class="form-control" value="" name="date_applyBy">
                                                </div>
                                            </div>
                                        </div>  
                                        <div class="form-group">
                                            <label for="landmark" class="cols-sm-2 control-label">Interview Date</label>
                                            <div class="cols-sm-10">
                                                <div class="input-group">                                                   
                                                  <input type="date" class="form-control" name="date_interview">
                                                </div>
                                            </div>
                                        </div>  
                                        <div class="form-group text-center">
                                            <button type="submit" name="btn_submit" class="btn btn-primary btn-lg btn login-button">Submit</button>
                                        </div>
                                       
                                    </form>
                                </div>
    
                            </div>
                        </div>
                    </div>
    </div>

<%- include('../include/company-footer'); -%>