<%- include('../include/auth-head', { pageTitle: pageTitle }); -%>

<div class="container h-100">
    <div class="row justify-content-center align-items-center h-100">
        <div class="card card-container">
            <i class="fas fa-user-circle profile-img-card"></i>
            <p id="profile-name" class="profile-name-card">
                <%= pageTitle %>
            </p>
            <% if (isError){ %>
                <div class="error-msg-container">
                    <p class="error-msg">
                        <%= isError %>
                    </p>
                </div>
            <% } %>
            <form class="form-signin" action="<%= path %>" method="POST">
                <input type="password" name='password' class="form-control" placeholder="New Password" required autofocus>
                <input type="password" name='confirmPassword' class="form-control" placeholder="Confirm Password" required>
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Reset Password</button>
            </form>
        </div>
        
    </div>
</div>

<%- include('../include/auth-footer'); -%>